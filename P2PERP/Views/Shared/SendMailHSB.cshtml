    $(document).ready(function () {
        $('#mailForm').on('submit', function (e) {
            e.preventDefault();

            var toEmail = $('#toEmail').val().split(',').map(e => e.trim());
            var Subject = $('#Subject').val();
            var messageBody = $('#messageBody').val();
            var mailAttachment = $('#mailAttachment')[0].files[0];

            var formData = new FormData();
            var emailObj = {
                ToEmails: toEmail,
                Subject: Subject,
                Body: messageBody,
                IsBodyHtml: true,
                CcEmails: [],
                BccEmails: [],
                AttachmentPaths: []
            };

            formData.append("email", JSON.stringify(emailObj));

            if (mailAttachment) {
                formData.append("mailAttachment", mailAttachment);
            }

            sendEmailAjax(formData, {
                title: "Sending Email...",
                html: "<b>Please wait.</b>",
                willClose: () => {
                    $('#mailForm')[0].reset();
                }
            });
        });
    });

</script>

