@{
    ViewBag.Title = "Send Email with Attachment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <!-- Modal Header -->
                <div class="modal-header bg-primary text-white d-flex justify-content-center position-relative p-0">

                    <!-- Title Centered -->
                    <h5 class="modal-title m-0 flex-grow-1 text-center text-white py-3">
                        Create Goods Return
                    </h5>


                </div>

                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" id="mailForm">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">To Email</label>
                            <input type="email" name="toEmail" class="form-control" placeholder="example@gmail.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Subject</label>
                            <input type="text" name="subject" class="form-control" placeholder="Enter subject" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Message</label>
                            <textarea name="messageBody" class="form-control" rows="4" placeholder="Write your message here..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Attachment</label>
                            <input type="file" name="attachment" class="form-control" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-send-fill"></i> Send Email
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Only show SweetAlert after mail is actually sent
        var status = "@ViewBag.Status";

        if (status && status.trim() !== "") {
            if (status.includes("✅") || status.toLowerCase().includes("success")) {
                Swal.fire({
                    title: "Email Sent!",
                    text: status.replace("✅", ""),
                    icon: "success",
                    confirmButtonColor: "#198754"
                });
            } else {
                Swal.fire({
                    title: "Error!",
                    text: status.replace("❌", ""),
                    icon: "error",
                    confirmButtonColor: "#dc3545"
                });
            }
        }
    });
</script>

