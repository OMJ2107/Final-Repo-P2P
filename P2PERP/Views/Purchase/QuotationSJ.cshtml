                                <label for="fullName" class="form-label">Full Name<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="fullName" name="VendorName" placeholder="Enter full name" required>
                                    <div class="invalid-feedback">Full Name is required.</div>
                                </div>
                            </div>

                            <!-- Mobile -->
                            <div class="col-md-6 mb-3">
                                <label for="mobile" class="form-label">Mobile Number<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    <input type="tel" class="form-control" id="mobile" name="MobileNo" placeholder="Enter mobile number" required>
                                    <div class="invalid-feedback">Mobile Number is required.</div>
                                </div>
                            </div>

                            <!-- Alternate Mobile -->
                            <div class="col-md-6 mb-3">
                                <label for="altMobile" class="form-label">Alternate Mobile</label>
                                <div class="input-group">
                                    <input type="tel" class="form-control" id="altMobile" name="AlternateNo" placeholder="Enter alternate number">
                                </div>
                            </div>

                            <!-- Personal Email -->
                            <div class="col-md-6 mb-3">
                                <label for="personalEmail" class="form-label">Personal Email<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    <input type="email" class="form-control" id="personalEmail" name="Email" placeholder="Enter email address" required>
                                    <div class="invalid-feedback">Valid email is required.</div>
                                </div>
                            </div>

                            <!-- Address -->
                            <div class="col-12 mb-3">
                                <label for="address" class="form-label">Address<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    <textarea class="form-control" id="address" name="Address" placeholder="Enter address" rows="2" required></textarea>
                                    <div class="invalid-feedback">Address is required.</div>
                                </div>
                            </div>
                        </div>
