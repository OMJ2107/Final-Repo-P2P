<!-- Vendor Registration Modal -->
<div class="modal fade" data-bs-backdrop="true" id="vendorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title mb-0 text-center flex-grow-1 text-white">Vendor Registration</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="Vendorform" class="row g-3 needs-validation" novalidate>
                    <!-- Personal Details -->
                    <div class="form-section">
                        <h5>Personal Details</h5>
                        <div class="row">
                            <!-- Full Name -->
