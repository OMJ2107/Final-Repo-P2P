        // Select All for quotation table
        $("#selectJITItems").on("change", function () {
            console.log("Active Check");
            let isChecked = $(this).is(":checked");
            $("#tblJITItems tbody input[type='checkbox']").prop("checked", isChecked);
        });

        // Auto-uncheck when any single checkbox unchecked
        $("#tblJITItems").on("change", "tbody input[type='checkbox']", function () {
            if (!$(this).is(":checked")) {
                $("#selectJITItems").prop("checked", false);
