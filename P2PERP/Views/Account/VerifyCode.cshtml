    <script src="~/Content/assets/vendor/libs/node-waves/node-waves.js"></script>
    <script src="~/Scripts/autocomplete-js.js"></script>
    <script src="~/Content/assets/vendor/libs/pickr/pickr.js"></script>
    <script src="~/Content/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Content/assets/vendor/libs/hammer/hammer.js"></script>
    <script src="~/Content/assets/vendor/js/menu.js"></script>

    <!-- Form Validation -->
    <script src="~/Scripts/popular.js"></script>
    <script src="~/Scripts/bootstrap5.js"></script>
    <script src="~/Scripts/auto-focus.js"></script>

    <!-- Main JS -->
    <script src="~/Scripts/pages-auth.js"></script>
    <script src="~/Scripts/Login.js"></script>

    <script>
        $(document).ready(function () {
            // Total countdown time in seconds (10 minutes)
            const TOTAL_TIME = 10 * 60;

            // Check if a timer already exists in sessionStorage
            let remainingSeconds = sessionStorage.getItem('verificationTimer');
            if (remainingSeconds === null) {
                remainingSeconds = TOTAL_TIME;
                sessionStorage.setItem('verificationTimer', remainingSeconds);
            } else {
                remainingSeconds = parseInt(remainingSeconds);
            }

            // Function to update the timer display
            function updateTimer() {
                let minutes = Math.floor(remainingSeconds / 60);
                let seconds = remainingSeconds % 60;

                $('#Timer').text(`${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`);

                if (remainingSeconds <= 0) {
                    clearInterval(timerInterval);
                    sessionStorage.removeItem('verificationTimer');
                    window.location.href = '@Url.Action("Logout", "Account")';
                }

                remainingSeconds--;
                sessionStorage.setItem('verificationTimer', remainingSeconds);
            }

            // Start the timer
            updateTimer();
            const timerInterval = setInterval(updateTimer, 1000);

            // Stop timer and clear sessionStorage if form is submitted
            $('#formAuthentication').on('submit', function () {
                clearInterval(timerInterval);
                sessionStorage.removeItem('verificationTimer');
            });
        });
    </script>

</body>
</html>
