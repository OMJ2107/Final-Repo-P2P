                <span class="app-brand-text demo text-heading fw-semibold">P2PERP</span>
            </div>
            <!-- /Logo -->

            <div class="authentication-inner row m-0">
                <!-- Left Section: Illustration -->
                <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center justify-content-center p-12 pb-2">
                    <div>
                        <img src="~/Content/images/illustrations/NewBG.png"
                             class="authentication-image-model d-none d-lg-block" alt="auth-model" />
                    </div>
                </div>
                <!-- /Left Section -->
                <!-- Right Section: Verify Email Form -->
                <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg position-relative py-sm-5 px-12 py-4">
                    <div class="w-px-400 mx-auto pt-12 pt-lg-0">

                        <!-- Heading -->
                        <h4 class="mb-8 text-primary fw-semibold">Verify your email ✉️</h4>
                        <p class="text-start mb-0 text-warning fs-5 text-capitalize">
                            Account activation link sent to your email address: <span class="h6 text-lowercase">@Session["ForgetPasswordEmail"]</span>
                        </p>

                        <!-- Verification Code Form -->
                        @using (Html.BeginForm("VerifyCode", "Account", FormMethod.Post, new { @id = "formAuthentication", @class = "mb-5", data_page = "verifyCode" }))
                        {
                            <div class="form-floating form-floating-outline mt-5 form-control-validation">
                                <!-- Input for verification code -->
                                @Html.TextBoxFor(m => m.Code, new
                                {
                                    @class = "form-control",
                                    @id = "code",
                                    placeholder = "Enter your code",
                                    autofocus = "autofocus"
                                })
                                <label for="code">Code</label>
                                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary w-100 my-5">Check</button>
                        }

                        <!-- Resend option -->
                        <p class="text-center">
                            Remaining Time : <span id="Timer"></span>
                        </p>
                    </div>
                </div>
                <!-- /Right Section -->
            </div>
        </div>
        <!-- /Authentication Wrapper -->
    </div>

    <!-- JS Libraries -->
    <script src="~/Scripts/sweetalert2@11.js"></script>
    <script src="~/Content/assets/vendor/libs/popper/popper.js"></script>
